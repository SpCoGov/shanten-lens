{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Shanten Lens",
  "version": "0.1.0",
  "identifier": "app.shanten.lens",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "splash",
        "title": "向听镜 - 正在启动…",
        "width": 420,
        "height": 300,
        "resizable": false,
        "decorations": false,
        "center": true,
        "alwaysOnTop": true,
        "url": "splash.html"
      },
      {
        "label": "main",
        "title": "向听镜 - Shanten Lens",
        "width": 1500,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 640,
        "resizable": true,
        "visible": false,
        "devtools": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi"
    ],
    "icon": [
      "icons/icon.ico"
    ],
    "resources": [
      "bin/shanten-backend.exe"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}