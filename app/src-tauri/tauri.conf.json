{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Shanten Lens",
  "version": "0.1.0",
  "identifier": "app.shanten.lens",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "splash",
        "title": "向听镜 - 正在启动…",
        "width": 420,
        "height": 300,
        "resizable": false,
        "decorations": false,
        "center": true,
        "alwaysOnTop": true,
        "url": "splash.html"
      },
      {
        "label": "main",
        "title": "向听镜 - Shanten Lens",
        "width": 1500,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 640,
        "resizable": true,
        "visible": false,
        "devtools": false,
        "decorations": false
      }
    ],
    "security": {
      "devCsp": "default-src 'self' http://localhost:* http://127.0.0.1:* tauri: asset: blob:; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' http://127.0.0.1:8787 ws://127.0.0.1:8787 http://localhost:* ws://localhost:* tauri: ipc:;",
      "csp": "default-src 'self' tauri: asset: blob:; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' http://127.0.0.1:8787 ws://127.0.0.1:8787 tauri: ipc:;",
      "capabilities": [
        {
          "identifier": "window-controls",
          "windows": [
            "main",
            "splash"
          ],
          "permissions": [
            "core:default",
            "core:event:default",
            "core:webview:default",
            "core:window:default",
            "core:window:allow-start-dragging",
            "core:window:allow-minimize",
            "core:window:allow-toggle-maximize",
            "core:window:allow-close"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi"
    ],
    "icon": [
      "icons/icon.ico"
    ],
    "resources": [
      "bin/shanten-backend.exe"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
